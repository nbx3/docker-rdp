<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/3.4/menu">

<menu id="applications-menu" label="Applications" execute="/usr/libexec/openbox-xdg-menu applications"/>
<menu id="preferences-menu" label="Preferences" execute="/usr/libexec/openbox-xdg-menu preferences"/>
<menu id="administration-menu" label="Administration" execute="/usr/libexec/openbox-xdg-menu system-settings"/>
<menu id="terminals-menu" label="Terminals" execute="/usr/libexec/openbox-xdg-menu /etc/xdg/openbox/terminals"/>

<menu id="root-menu" label="Openbox 3">
  <separator label="Openbox"/>
  <item label="Terminal">
    <action name="Execute"><execute>gnome-terminal</execute></action>
  </item>
  <item label="Firefox">
    <action name="Execute"><execute>firefox</execute></action>
  </item>
  <item label="Chrome">
    <action name="Execute"><execute>google-chrome</execute></action>
  </item>
  <item label="Files">
    <action name="Execute"><execute>nautilus</execute></action>
  </item>
  <item label="Calculator">
    <action name="Execute"><execute>speedcrunch</execute></action>
  </item>
  <separator/>
  <menu id="applications-menu"/>
  <menu id="preferences-menu"/>
  <menu id="administration-menu"/>
  <separator/>
  <item label="Reconfigure">
    <action name="Reconfigure" />
  </item>
  <separator/>
  <item label="Log Out">
    <action name="SessionLogout">
      <prompt>yes</prompt>
    </action>
  </item>
  <item label="Suspend">
    <action name="Execute">
      <prompt>Suspend?</prompt>
      <execute>dbus-send --system --print-reply  --dest=org.freedesktop.UPower /org/freedesktop/UPower org.freedesktop.UPower.Suspend</execute>
    </action>
  </item>
  <item label="Reboot">
    <action name="Execute">
      <prompt>Reboot?</prompt>
      <execute>dbus-send --system --print-reply  --dest=org.freedesktop.ConsoleKit /org/freedesktop/ConsoleKit/Manager  org.freedesktop.ConsoleKit.Manager.Restart</execute>
    </action>
  </item>
  <item label="Shutdown">
    <action name="Execute">
      <prompt>Shutdown?</prompt>
      <execute>dbus-send --system --print-reply  --dest=org.freedesktop.ConsoleKit /org/freedesktop/ConsoleKit/Manager  org.freedesktop.ConsoleKit.Manager.Stop</execute>
    </action>
  </item>
</menu>

</openbox_menu>
